{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: SupportFlow",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/supportflow/main.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/supportflow"
            },
            "justMyCode": true,
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/supportflow"
            },
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Test Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/supportflow/test_agent.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/supportflow"
            },
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        }
    ]
}